generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  name  String
  rooms Room[] @relation("players")
}

model Room {
  id      String @id @default(uuid())
  hostId  String
  players User[] @relation("players")
}
